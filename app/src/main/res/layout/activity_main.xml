<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/loginPageLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Login Page" />

    <TextView
        android:id="@+id/loginErrorLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#F5004F"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/userNameField"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:layout_gravity="center"
        android:inputType="text" />

    <EditText
        android:id="@+id/pswField"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:layout_gravity="center"
        android:inputType="text" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0079FF"
        android:background="@drawable/round_btn"
        android:textColor="#fff"
        android:text="Login"
        android:padding="10dp"
        android:layout_marginVertical="10dp"
        android:textColorLink="#387F39" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_btn_green"
        android:textColor="#fff"
        android:padding="14dp"
        android:text="Register" />

    <TextView
        android:id="@+id/forgotPswLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/underlined_text" />

</LinearLayout>
